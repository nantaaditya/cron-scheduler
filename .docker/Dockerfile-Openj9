FROM cobaltinc/openj9-17.0.3_7-jre-alpine

ENV TZ=Asia/Jakarta

RUN mkdir app
RUN mkdir app/logs

ADD target/*.jar app/app.jar

WORKDIR /app

ENTRYPOINT [ "java","-Xms256m","-Xmx512m","-XX:+IgnoreUnrecognizedVMOptions","-XX:+UseContainerSupport","-XX:+IdleTuningCompactOnIdle","-XX:+IdleTuningGcOnIdle","-Xtune:virtualized","-jar","app.jar" ]